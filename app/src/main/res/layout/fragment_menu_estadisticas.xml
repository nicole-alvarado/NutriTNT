<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenuEstadisticasFragment"
    android:background="@drawable/background_estadisticas"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estadisticas"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">


        <!-- Pila de botones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonEstGenerales"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:text="Generales"
                android:background="@drawable/welcome"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonEstMap"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:text="Mapa"
                android:background="@drawable/welcome"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonBackWelcome"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="55dp"
                android:text="Volver al Inicio"
                android:backgroundTint="@color/buttonBack"
                android:drawableStart="@drawable/ic_arrow_left"
                android:textColor="#FFFFFF" />



        </LinearLayout>


    </LinearLayout>

</LinearLayout>