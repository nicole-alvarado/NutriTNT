<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_estadisticas"
    tools:context=".ui.UbicacionConsumidorFragment">

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, mueva el pin a su zona de residencia"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:paddingBottom="16dp" />

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
            android:id="@+id/sigButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:backgroundTint="#8A4EBF"
        android:drawableEnd="@drawable/arrow_right_sig"
        android:layout_marginBottom="20dp"
            android:text="Siguiente" />

    </LinearLayout>


