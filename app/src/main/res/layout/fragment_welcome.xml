<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment"
    android:background="@drawable/backgound_welcome"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <!-- Aquí puedes ajustar la imagen según tu necesidad -->
        <!--  <ImageView
              android:id="@+id/imageView"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:scaleType="centerCrop"
              android:adjustViewBounds="true"
              android:src="@drawable/alimentos" />
  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/centeredIcon"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@drawable/iconnameapp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Aquí se añaden los botones en dos pilas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <!-- Pila de botones 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNewEncuesta"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/welcome"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonEncuestas"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/welcome"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:textColor="#FFFFFF" />



            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/welcome"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:text="Ver Estadisticas"
                android:textColor="#FBFAFA" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>