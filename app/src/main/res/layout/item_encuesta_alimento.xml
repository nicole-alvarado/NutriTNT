<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEncuestaAlimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/labelEncuestaAlimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="ID:"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:id="@+id/labelAlimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alimento:"
                        android:textStyle="bold"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:id="@+id/labelEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado:"
                        android:textStyle="bold"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    >
                    <TextView
                        android:id="@+id/tvEncuestaAlimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Encuesta alimento"
                        android:textColor="@android:color/black"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tvDescripcionAlimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yogur"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comenzada"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>