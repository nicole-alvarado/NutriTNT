<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" /> <!-- Violeta mÃ¡s oscuro -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimaryDark" /> <!-- Degradado de lila a violeta -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/colorPrimaryDark"/> <!-- Borde -->
        </shape>
    </item>
</selector>
